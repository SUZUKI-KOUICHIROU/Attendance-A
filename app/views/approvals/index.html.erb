<div>

  <%= form_with(model: @user, url: approvals_update_month_approval_user_path(@user, @approvals), method: :patch, local: true) do |f| %>
    <% @users.each do |user| %>
    <% if @user.employee_number == 2 %>  
      <% if user.approvals.count > 0 && user.id != 2 %> 
          <h1><%= user.name %>からの1ヶ月勤怠変更申請</h1>
      【user_id】<%= user.id %>
      【approval_id】<%= @approval_user.id %>
      【superior_id】<%= @approval_user.superior_id %>
      
      <% end %>
    <% end %>
    
    
        <table class="table table-bordered table-condensed table-hover table-striped" id="table-attendances">
         <thead>
            <tr>
              <th>月</th>
              <th>指示者確認㊞</th>
              <th>変更</th>
              <th>勤怠を確認する</th>
              </tr>
          </thead>
          <tbody>
                <tr>    
                  <td><%= %></td> 
                  <td><%= f.select :month_checker, @month_approval, { include_blank: "" }, class: "form-control" %></td>
                  <td><%= f.check_box :status_change %></td>
                  <td><%= link_to "確認", user_path(@user), class: "btn btn-sm btn-primary" %></td>
                </tr>
          </tbody>
        </table>
      <% end %>
          <div class="center">
            <%= f.submit "変更を送信する", class: "btn btn-lg btn-primary" %>
          </div>
  <% end %>  
</div>