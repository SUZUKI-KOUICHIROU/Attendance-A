<% provide(:title, @user.name) %>
<%= form_with(model: @user, url: attendances_update_one_month_user_path(date: @first_day), local: true, method: :patch) do |f| %>
  <div>
    <table class="table table-bordered table-condensed table-hover" id="table-attendances">
      <thead>
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>出社</th>
          <th>退社</th>
          <th>翌日</th>
          <th>在社時間</th>
          <th>備考</th>
        　<th>指示者確認㊞</th>
        </tr>
      </thead>

      <tbody>
        <% @attendances.each do |day| %>
          <%= f.fields_for "attendances[]", day do |attendance| %>
            <tr>
              <td><%= l(day.worked_on, format: :short) %></td>
                  <% css_class = case %w{日 月 火 水 木 金 土}[day.worked_on.wday]
                     when '土'
                     'text-primary'
                     when '日'
                     'text-danger'
                     end %>
          <td class="<%= css_class %>"><%= %w{日 月 火 水 木 金 土}[day.worked_on.wday] %></td>
            <% if Date.current < day.worked_on %>
              <td><%= attendance.time_field :changed_started_at, readonly: true, class: "form-control" %></td>
              <td><%= attendance.time_field :changed_finished_at, readonly: true, class: "form-control" %></td>
            <% else %>
              <td><%= attendance.time_field :changed_started_at, class: "form-control" %></td>
              <td><%= attendance.time_field :changed_finished_at, class: "form-control" %></td>
            <% end %>
              <td><%= attendance.check_box :tomorrow %></td>
              <td>
                  <% if day.started_at.present? && day.finished_at.present? %>
                    <%= working_times(day.started_at, day.finished_at) %>
                  <% end %>
              </td>
              <td><%= attendance.text_field :note, class: "form-control" %></td>
              <td>
                  <% if Date.current < day.worked_on && day.finished_at.blank? %>
                    <%= attendance.collection_select :change_confirmation_approver_id, @superiors, :id, :name,
                                                     {include_blank: true, selected: nil}, disabled: true, class: "form-control" %>
                  <% else %>
                    <%= attendance.collection_select :change_confirmation_approver_id, @superiors, :id, :name,
                                                     {include_blank: true, selected: nil}, class: "form-control" %>
                  <% end %>
              </td>  
            </tr>
          <% end %>
        <% end %>
       </tbody>
     </table>
  </div>
  

  <div class="center">
    <%= f.submit "編集を保存する", class: "btn btn-lg btn-primary" %>
    <%= link_to "キャンセル", user_path(date: @first_day), class: "btn btn-lg btn-default" %> 
  </div>
    <% end %>