<% provide(:title, @user.name) %>

<%= form_with(model: @user, url: attendances_update_one_month_user_path(@user, @attendance), local: true, method: :patch) do |f| %>
  
  <div>
    <table class="table table-bordered table-condensed table-hover" id="table-attendances">
      <thead>
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>出社</th>
          <th>退社</th>
          <th>翌日</th>
          <th>在社時間</th>
          <th>備考</th>
        　<th>指示者確認㊞</th>
        </tr>
      </thead>

      <tbody>
        <% @attendances.each do |day| %>
          <%= f.fields_for "attendances[]", day do |attendance| %>
            <%= attendance.hidden_field :worktime_approval, :value => "申請中" %>
            <tr>
              <td><%= l(day.worked_on, format: :short) %></td>
                  <% css_class = case %w{日 月 火 水 木 金 土}[day.worked_on.wday]
                     when '土'
                     'text-primary'
                     when '日'
                     'text-danger'
                     end %>
          <td class="<%= css_class %>"><%= %w{日 月 火 水 木 金 土}[day.worked_on.wday] %></td>
            <% if Date.current < day.worked_on %>
              <td><%= attendance.time_field :changed_started_at, readonly: true, class: "form-control" %></td>
              <td><%= attendance.time_field :changed_finished_at, readonly: true, class: "form-control" %></td>
            <% else %>
              <td><%= attendance.time_field :changed_started_at, class: "form-control" %></td>
              <td><%= attendance.time_field :changed_finished_at, class: "form-control" %></td>
            <% end %>
              <td><%= attendance.check_box :tomorrow, {}, "true", "false" %></td>
              <td>
                  <% if day.changed_started_at.present? && day.changed_finished_at.present? %>
                    <%= worktime_tomorrow(format_basic_info(day.changed_finished_at), format_basic_info(day.changed_started_at), day.tomorrow) %>
                  <% end %>
              </td>
              <td><%= attendance.text_field :note, class: "form-control" %></td>
              <td>
                  <%= attendance.select :worktime_check_superior, @superiors.pluck(:name), { include_blank: "選択してください", selected: 1 },
                                                                                           { class: "form-control", required: false } %>
              </td>  
            </tr>
          <% end %>
        <% end %>
       </tbody>
     </table>
  </div>
  

  <div class="center">
    <%= f.submit "編集を保存する", class: "btn btn-lg btn-primary" %>
    <%= link_to "キャンセル", user_path(date: @first_day), class: "btn btn-lg btn-default" %> 
  </div>
    <% end %>