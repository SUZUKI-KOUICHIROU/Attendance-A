<%= form_with(model: user, url: update_userinformation_user_path(user), local: true, method: :patch) do |f| %>
  <%= render 'shared/error_messages', object: user %>

  <%= f.label :name, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :name, class: "form-control" %>
  
  <%= f.label :email, class: "label-#{yield(:class_text)}" %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :belong, class: "label-#{yield(:class_text)}" %> 
  <%= f.text_field :belong, class: "form-control" %>

  <%= f.label :employee_number, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :employee_number, class: "form-control" %>

  <%= f.label :card_id, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :card_id, class: "form-control" %>
  
  <%= f.label :password, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password, class: "form-control" %>
  
  <%= f.label :basic_time, class: "label-#{yield(:class_text)}" %>
  <%= f.time_field :basic_time, class: "form-control" %>
  
  <%= f.label :designated_starttime, class: "label-#{yield(:class_text)}" %> 
  <%= f.time_field :designated_starttime, class: "form-control" %>

  <%= f.label :designated_endtime, class: "label-#{yield(:class_text)}" %> 
  <%= f.time_field :designated_endtime, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>