<table class="table table-bordered table-condensed table-hover table-
  striped" id="table-attendances">

  <thead>
    <tr>
      <th rowspan="3">残業申請</th>
      <th rowspan="3">日付</th>
      <th rowspan="3">曜日</th>
      <th colspan="8">【実績】</th>
      <th colspan="5">所定外勤務</th>
    </tr>
    <tr>
      <th colspan="3">出社</th>
      <th colspan="3">退社</th>
      <th rowspan="2">存社時間</th>
      <th rowspan="2">備考</th>
      <th colspan="2">終了予定時間</th>
      <th rowspan="2">時間外時間</th>
      <th rowspan="2">業務処理内容</th>
      <th rowspan="2">指示者確認㊞</th>
    </tr>
    <tr>
      <th>時</th>
      <th>分</th>
      <th></th>
      <th>時</th>
      <th>分</th>
      <th></th>
      <th>時</th>
      <th>分</th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |day| %>
    <tr>
      <td>
        <% if current_user?(@user) %> 
          <%= link_to "残業申請", attendances_edit_overwork_request_user_path(@user, date: day.worked_on), remote: true, class: "btn btn-primary" %>
        <% end %>
      </td>
      <td><%= l(day.worked_on, format: :short) %></td>
              <% 
                css_class = 
                case %w{日 月 火 水 木 金 土}[day.worked_on.wday]
                when '土'
                'text-primary'
                when '日'
                'text-danger'
                end
              %>
      <td class="<%= css_class %>"><%= %w{日 月 火 水 木 金 土}[day.worked_on.wday] %></td>
      <td><%= day.started_at.strftime("%H") if day.started_at.present? %></td>
      <td><%= day.started_at.strftime("%M") if day.started_at.present? %></td>
      <td>
          <% if current_user?(@user) %> 
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          <% end %>
      </td>
      <td><%= day.finished_at.strftime("%H") if day.finished_at.present? %></td>
      <td><%= day.finished_at.strftime("%M") if day.finished_at.present? %></td>
      <td></td>
      <td>
          <% if day.started_at.present? && day.finished_at.present? %>
            <%= str_times = working_times(day.started_at.floor_to(15.minutes), day.finished_at.floor_to(15.minutes)) %>
            <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
          <% end %>
      </td>
      <td><%= day.note %></td>
      <td><%= day.plans_endtime.strftime('%H') if day.plans_endtime.present? %></td> 
      <td><%= day.plans_endtime.strftime('%M') if day.plans_endtime.present? %></td> 
      <td>
          <% if day.plans_endtime.present? %>
            <%= overwork_times(format_basic_info(day.plans_endtime), format_basic_info(@user.designated_endtime), day.next_day) %>
          <% end %>
      </td>
      <td><%= day.business_contents if day.business_contents.present? %></td>
      <td>
         <% if day.worktime_approval == "申請中" && day.finished_at.present? %> 
           <font color="green"><%= "【勤怠変更】#{day.worktime_check_superior}へ申請中" %></font>
         <% elsif day.worktime_approval == "承認" && day.finished_at.present? %>
           <font color="green"><%= "【勤怠変更】#{day.worktime_check_superior}から承認済" %></font>
         <% elsif day.worktime_approval == "否認" && day.finished_at.present? %> 
           <font color="green"><%= "【勤怠変更】#{day.worktime_check_superior}から否認されました" %></font>
         <% end %>
         <br>
         <% if day.overwork_status == "申請中" && day.plans_endtime.present? %> 
           <font color="blue"><%= "【残業申請】#{day.superior_confirmation}へ申請中" %></font>
         <% elsif day.overwork_status == "承認" && day.plans_endtime.present? %>
           <font color="blue"><%= "【残業申請】#{day.superior_confirmation}から承認済" %></font>
         <% elsif day.overwork_status == "否認" && day.plans_endtime.present? %> 
           <font color="blue"><%= "【残業申請】#{day.superior_confirmation}から否認されました" %></font>
         <% end %>
      </td>
    </tr>
   </tbody>
     <% end %>
   <tfoot>
     <tr>
       <td></td>
       <td colspan="2"></td>
       <td colspan="6"></td>
       <td></td>
       <td colspan="5"></td>
       <td>
       
         <% if @approval.month_status == "承認" %>
           <font class="approval-4">所属長承認：<%= "#{@approval.month_check_superior}から承認済" %></font>
         <% elsif @approval.month_status == "否認" %> 
           <font class="approval-4">所属長承認：<%= "#{@approval.month_check_superior}から否認" %></font>
         <% elsif @approval.month_status == "申請中" %>
           <font class="approval-4">所属長承認：<%= "#{@approval.month_check_superior}へ申請中" %></font>  
         <% else %>
           <font>所属長承認：未</font>  
         <% end %>
       
         <% if current_user == @user %> 
           <%= form_with(model: @user, url: attendances_update_month_apply_user_path(date: @first_day), local: true, method: :patch) do |f| %>
             <%= f.select :month_check_superior, @superiors.pluck(:name), { include_blank: "選択してください", selected: 1 },
                                                 { class: "form-control", required: true } %>
             <%= f.submit "申請", class: "btn btn-md btn-primary btn-block btn-monthapproval" %>
           <% end %>
         <% end %>
       </td>
      </tr>
    </tfoot>
  </table>
</div>

